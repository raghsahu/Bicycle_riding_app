<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_pay_ride"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_20sdp"
                    android:src="@drawable/man">

                </ImageView>

                <View
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/light_black">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_name"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        app:srcCompat="@drawable/user_profile">

                    </ImageView>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:weightSum="1"
                        >

                        <LinearLayout
                            android:layout_weight="0.1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            >


                        <EditText
                            android:background="@null"
                            android:id="@+id/et_name"
                            style="@style/text_14_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:inputType="textPersonName"
                            >

                        </EditText>

                            <View
                                android:background="@color/light_black"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                >

                            </View>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:background="@drawable/circle_shape"
                                android:id="@+id/iv_edit_name"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                app:srcCompat="@drawable/ic_edit_">

                            </ImageView>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        app:srcCompat="@drawable/ic_phone_">

                    </ImageView>


                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:weightSum="1"
                        >

                        <LinearLayout
                            android:layout_weight="0.1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            >

                            <TextView
                                style="@style/text_14_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Mobile"
                                >
                            </TextView>

                            <View
                                android:background="@color/light_black"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                >

                            </View>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                app:srcCompat="@drawable/checkmark">

                            </ImageView>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        app:srcCompat="@drawable/ic_email_">

                    </ImageView>


                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:weightSum="1"
                        >

                        <LinearLayout
                            android:layout_weight="0.1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            >


                            <EditText
                                android:background="@null"
                                style="@style/text_14_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                android:inputType="textPersonName"
                                >

                            </EditText>

                            <View
                                android:background="@color/light_black"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                >

                            </View>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:background="@drawable/circle_shape"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                app:srcCompat="@drawable/ic_edit_">

                            </ImageView>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        app:srcCompat="@drawable/ic_vpn_key_black_24dp">

                    </ImageView>


                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:weightSum="1"
                        >

                        <LinearLayout
                            android:layout_weight="0.1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            >


                            <EditText
                                android:background="@null"
                                style="@style/text_14_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Password"
                                android:inputType="textPersonName"
                                >

                            </EditText>

                            <View
                                android:background="@color/light_black"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                >

                            </View>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:background="@drawable/circle_shape"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                app:srcCompat="@drawable/ic_edit_">

                            </ImageView>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/text_12_light_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/use_a_password">

                </TextView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_pay_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:padding="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/light_black"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/we_very_concern_data_privacy">

            </TextView>

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/yellow"
                style="@style/text_14_light_black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:padding="5dp"
                android:text="@string/save"
                android:textAlignment="center"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

</layout>