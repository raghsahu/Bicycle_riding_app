<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="dev.raghav.bicycleapp.model_pojo.ListBikeStoreItem" />

    </data>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:src="@drawable/paid"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.15"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/text_16_light_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paid to mamta center">

            </TextView>

            <TextView
                style="@style/text_12_light_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21/jun/2020  10.59 am">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/text_16_light_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs 130">

            </TextView>
        </LinearLayout>


    </LinearLayout>

    <View
        android:background="@color/light_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        >

    </View>

</LinearLayout>

</layout>